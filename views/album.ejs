        document.addEventListener('DOMContentLoaded', function() {
          const closeBoxes = document.querySelectorAll('.more-close');
        
          closeBoxes.forEach(function(closeBox) {
            closeBox.addEventListener('click', function() {
                document.getElementById('album-info').style.pointerEvents = 'auto';
                document.getElementById('album-info').style.opacity = '1';
                document.body.style.overflow = 'visible';
                const moreBox = document.getElementById('more-box');
                moreBox.style.display = 'none';

                const moreBoxes = document.querySelectorAll('.more-boxes')
                moreBoxes.forEach(element => {
                  element.style.display = 'none';
                });
            });
          });
